<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" novalidate class="needs-validation"> <!-- Bootstrap Required Field -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" placeholder="Enter Username" class="form-control" required>
                <div class="invalid-feedback">Enter Valid Username</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter Password" class="form-control" required>
                <div class="invalid-feedback">Enter Valid Password</div>
            </div>
            <button class="btn btn-dark add-btn">Login</button>
        </form>
    </div>
</div>